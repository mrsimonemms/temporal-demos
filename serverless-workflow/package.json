{
  "name": "serverless-workflow",
  "version": "0.0.0",
  "description": "An example of how to use Serverless Workflow to define Temporal Workflows",
  "author": "Simon Emms <simon@simonemms.com>",
  "license": "Apache-2.0",
  "scripts": {
    "client": "ts-node ./src/client.ts",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "worker": "nodemon ./src/worker.ts"
  },
  "dependencies": {
    "@serverlessworkflow/sdk": "^1.0.1",
    "@temporalio/activity": "^1.12.0",
    "@temporalio/client": "^1.12.0",
    "@temporalio/worker": "^1.12.0",
    "@temporalio/workflow": "^1.12.0",
    "axios": "^1.10.0",
    "handlebars": "^4.7.8",
    "nanoid": "^5.1.5"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.30.1",
    "@types/handlebars": "^4.0.40",
    "@types/node": "^24.0.10",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.3.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "ts-node"
    },
    "ext": "ts",
    "watch": [
      "src",
      "workflow.yaml",
      "src/template.hbs"
    ]
  }
}
